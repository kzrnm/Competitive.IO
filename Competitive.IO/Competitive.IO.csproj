<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
		<LangVersion Condition="'$(TargetFramework)' == 'netstandard2.0'">7</LangVersion>
		<LangVersion Condition="'$(TargetFramework)' != 'netstandard2.0'">7.3</LangVersion>

		<RootNamespace>Kzrnm.Competitive.IO</RootNamespace>

		<NoWarn>$(NoWarn);CA1063;CA1806</NoWarn>

		<PackageTags>AtCoder;Competitive Programing</PackageTags>
		<PackageId>Competitive.IO</PackageId>
		<Description>IO library for competitive programming</Description>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<Compile Condition="'$(TargetFramework)' == 'netstandard2.0'" Remove="Utf8ConsoleWriter.Span\Utf8ConsoleWriter.cs" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Competitive.IO.Test, " />
		<None Include="Utf8ConsoleWriter.Span\Utf8ConsoleWriter.cs" />
		<PackageReference Include="SourceExpander.Embedder" Version="5.0.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
</Project>
